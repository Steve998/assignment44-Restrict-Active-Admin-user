  <%= f.label :customer_order %><br>
  <%= f.number_field :customer_order %>
</div>


<div class="field">
  <%= f.label :company_name %><br>
  <%= f.select :customer_company, Company.all.collect {|p| [ p.company_name, p.id ] }, {include_blank: 'None'} %>

</div>

<div class="actions">
  <%= f.submit %>
</div>
